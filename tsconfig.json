{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noStrictGenericChecks": true,
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "newLine": "LF",
    "lib": [
      "es6",
      "esnext.asynciterable"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/__mocks__/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/setupTests.ts"
  ]
}
